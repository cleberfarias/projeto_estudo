generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  author    String
  text      String
  createdAt DateTime @default(now())
  status    String?  @default("sent")
  type      String   @default("text")
  
  @@map("messages")
}

model Automation {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  type      String   // "cron" ou "keyword"
  spec      Json     // { "cron": "0 9 * * *" } ou { "keyword": "oi" }
  payload   Json     // { "text": "Bom dia, time!" }
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  
  @@map("automations")
}