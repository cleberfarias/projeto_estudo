# ============================================================
# FRONTEND
# ============================================================

# Backend API URL
# Usado pelo frontend para conectar ao servidor WebSocket
VITE_SOCKET_URL=http://localhost:3000
VITE_API_URL=http://localhost:3000

# ============================================================
# BACKEND - AUTENTICAÇÃO JWT
# ============================================================

# JWT Secret Key
# IMPORTANTE: Altere para um valor seguro em produção!
# Gere com: python -c "import secrets; print(secrets.token_urlsafe(64))"
# ou: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_change_in_production

# Environment (development | production)
# Em produção, JWT_SECRET não pode ser o valor default
ENVIRONMENT=development

# JWT Algorithm (padrão: HS256)
# JWT_ALG=HS256

# JWT Token Expiration (em minutos, padrão: 60)
# ACCESS_TTL_MIN=60

# ============================================================
# BACKEND - REDIS (Cache & Socket.IO Clustering)
# ============================================================

# Redis URL para Socket.IO adapter e cache
# Permite múltiplas instâncias da API com WebSocket
REDIS_URL=redis://redis:6379

# ============================================================
# BACKEND - STORAGE (MinIO / S3)
# ============================================================

S3_ENDPOINT=http://minio:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=MINIOADMIN
S3_SECRET_KEY=MINIOADMIN
S3_BUCKET=chat-uploads
PUBLIC_BASE_URL=http://localhost:9000
MAX_UPLOAD_MB=15

# ============================================================
# BACKEND - SERVIDOR
# ============================================================

# Porta do servidor backend (opcional)
# PORT=3000

# Ambiente de execução
# NODE_ENV=development

# ============================================================
# BACKEND - OPENAI / CHATGPT
# ============================================================

# OpenAI API Key
# Obtenha sua chave em: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-3.5-turbo

# NLU (Natural Language Understanding) com GPT
# Use GPT para detecção de intenção (mais preciso, tem custo)
# false = usa pattern matching (rápido, sem custo)
# true = usa GPT (mais preciso, requer OPENAI_API_KEY)
USE_GPT_NLU=false
OPENAI_NLU_MODEL=gpt-4o-mini
